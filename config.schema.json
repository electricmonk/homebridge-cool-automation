{
    "pluginAlias": "CoolAutomation",
    "pluginType": "platform",
    "singular": true,
    "headerDisplay": "Homebridge plugin for Cool Automation - HVAC Systems Controller",
    "footerDisplay": "Created by @nitaybz",
    "schema": {
        "type": "object",
        "properties": {
            "hubs": {
                "type": "array",
                "title": "CoolMaster Hub",
                "description": "List of CoolMaster Hub to integrate with Homebridge. If not provided, the plugin will use the top-level IP and port for a single device.",
                "items": {
                    "type": "object",
                    "properties": {
                        "ip": {
                            "title": "IP Address",
                            "type": "string",
                            "required": true
                        },
                        "port": {
                            "title": "Port",
                            "type": "integer",
                            "default": 10102
                        }
                    },
                    "required": ["ip"]
                }
            },
            "statePollingInterval": {
                "title": "AC Device Status Polling Interval in Seconds",
                "description": "Time in seconds between each status polling of the devices",
                "default": 30,
                "type": "integer",
                "minimum": 5,
                "maximum": 300
            },
            "minTemperature": {
                "title": "Minimum Temperature",
                "default": 16,
                "type": "integer",
                "minimum": 10,
                "maximum": 95
            },
            "maxTemperature": {
                "title": "Maximum Temperature",
                "default": 30,
                "type": "integer",
                "minimum": 10,
                "maximum": 95
            },
            "coolMode": {
                "title": "COOL",
                "type": "boolean",
                "default": true,
                "required": true
            },
            "heatMode": {
                "title": "HEAT",
                "type": "boolean",
                "default": true,
                "required": true
            },
            "autoMode": {
                "title": "AUTO",
                "type": "boolean",
                "default": true,
                "required": true
            },
            "fanMode": {
                "title": "FAN",
                "description": "Creates extra fan accessory",
                "type": "boolean",
                "default": false,
                "required": true
            },
            "dryMode": {
                "title": "DRY",
                "description": "Creates extra dehumidifier accessory",
                "type": "boolean",
                "default": false,
                "required": true
            },
            "vlowFspeed": {
                "title": "Very Low / Quiet",
                "type": "boolean",
                "default": true,
                "required": true
            },
            "lowFspeed": {
                "title": "Low",
                "type": "boolean",
                "default": true,
                "required": true
            },
            "medFspeed": {
                "title": "Medium",
                "type": "boolean",
                "default": true,
                "required": true
            },
            "highFspeed": {
                "title": "High",
                "type": "boolean",
                "default": true,
                "required": true
            },
            "topFspeed": {
                "title": "Very High / Top",
                "type": "boolean",
                "default": true,
                "required": true
            },
            "autoFspeed": {
                "title": "Auto",
                "type": "boolean",
                "default": true,
                "required": true
            },
            "debug": {
                "title": "Enable Debug Logs",
                "description": "When checked, the plugin will produce extra logs for debugging purposes",
                "type": "boolean",
                "default": false,
                "required": false
            },
            "ignoreFanSpeed": {
                "title": "Ignore Fan Speed",
                "description": "When checked, fan speed will not be sent to the hub (fspeed will be omitted)",
                "type": "boolean",
                "default": false,
                "required": false
            }
        }
    },
	"layout": [   
        {
        "key": "hubs",
        "type": "array",
        "title": "CoolMaster Hub",
        "orderable": false,
        "buttonText": "Add CoolMaster",
        "expandable": true,
        "expanded": true,
        "items": [
            "hubs[].ip",
            "hubs[].port"
            ]
        },
		{
			"type": "fieldset",
			"expandable": true,
			"title": "Advanced Settings",
			"description": "Don't change these, unless you understand what you're doing.",
			"items": [
                "debug",
                "ignoreFanSpeed",
				"statePollingInterval",
				"minTemperature",
				"maxTemperature",
        		{
        			"type": "fieldset",
        			"expandable": true,
        			"title": "Modes",
        			"description": "enable/disable modes",
        			"items": [
        				"coolMode",
        				"heatMode",
        				"autoMode",
        				"fanMode",
        				"dryMode"
        			]
        		},
        		{
        			"type": "fieldset",
        			"expandable": true,
        			"title": "Fan Speeds",
        			"description": "enable/disable fan speeds",
        			"items": [
        				"vlowFspeed",
        				"lowFspeed",
        				"medFspeed",
        				"highFspeed",
        				"topFspeed",
        				"autoFspeed"
        			]
        		}
			]
		}
	]
  }